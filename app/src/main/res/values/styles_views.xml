<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewParent">
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="TextView.Black" parent="TextViewParent">
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>


    <style name="TextView.White" parent="TextViewParent">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextView.White.ExtraLarge" parent="TextView.White">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="TextView.Grey" parent="TextViewParent">
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="TextView.Black.Small" parent="TextView.Black">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextView.Black.Medium" parent="TextView.Black">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.Black.Large" parent="TextView.Black">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView.Black.Large.Bold" parent="TextView.Black.Large">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Grey.Small" parent="TextView.Grey">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextView.Grey.Medium" parent="TextView.Grey">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.Grey.Large" parent="TextView.Grey">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView.White.Medium" parent="TextView.White">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.Black.Medium.Bold" parent="TextView.Black">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.White.Small.Bold" parent="TextView.White.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/white</item>

    </style>

    <style name="CardView.Large" parent="CardViewStyle">
        <item name="android:layout_height">200dp</item>
    </style>

    <style name="CardView.Small" parent="CardViewStyle">
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="ButtonPrimary" parent="android:Widget.Holo.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:background">@drawable/button_ripple</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>


</resources>