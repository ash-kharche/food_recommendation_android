<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardView.Small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/order_date_text"
            style="@style/TextView.Grey.Medium"
            android:layout_width="wrap_content"
            android:text="ORDER DATE"
             />

        <TextView
            android:id="@+id/order_no_text"
            style="@style/TextView.Grey.Large"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:text="ORDER NO"
             />

        <TextView
            android:id="@+id/tvOrderDate"
            style="@style/TextView.Black.Large.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_date_text"
            android:text="24th Oct 2015,06:30 PM"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvOrderId"
            style="@style/TextView.Black.Large.Bold"
            android:layout_width="wrap_content"
            android:layout_below="@+id/order_no_text"
            android:layout_alignParentRight="true"
            android:text="123456"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tvOrderId"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/order_tax_text"
            style="@style/TextView.Grey.Medium"
            android:layout_width="wrap_content"
            android:layout_below="@+id/divider"
            android:text="TAX"
             />

        <TextView
            style="@style/TextView.Grey.Large"
            android:layout_width="wrap_content"
            android:layout_below="@+id/order_tax_text"
            android:text="AMOUNT"
             />

        <TextView
            android:id="@+id/tvOrderTax"
            style="@style/TextView.Black.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_alignParentRight="true"
            android:text="Rs.100"
             />

        <TextView
            android:id="@+id/tvOrderAmount"
            style="@style/TextView.Black.Large.Bold"
            android:layout_width="wrap_content"
            android:layout_below="@+id/tvOrderTax"
            android:layout_alignParentRight="true"
            android:text="Rs.500"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>


